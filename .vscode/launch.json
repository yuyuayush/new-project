{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "chrome",
        "request": "launch",
        "name": "Launch Chrome against localhost",
        "url": "http://localhost:3000", // Change this if your app runs on a different port
        "webRoot": "${workspaceFolder}"
      },
      {
        "type": "node-terminal",
        "request": "launch",
        "name": "Start Next.js App",
        "command": "npm run dev",
        "cwd": "${workspaceFolder}"
      }
    ]
  }
  